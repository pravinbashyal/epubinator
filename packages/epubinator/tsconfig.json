{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "lib": ["es2015", "es6", "dom", "es7", "es2017", "esnext.asynciterable"],
    "baseUrl": "src"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*"]
}
